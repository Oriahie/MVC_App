    <link href="~/Content/lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">

    <!-- Shamcey CSS -->
    <link rel="stylesheet" href="~/Content/css/shamcey.css">
</head>

<body class="bg-gray-900">

    <div class="signpanel-wrapper">
        <div class="signbox">
            <div class="signbox-header">
                <h2>Rolins Academy</h2>
                <p class="mg-b-0">Log in Page</p>
            </div><!-- signbox-header -->
            <div class="signbox-body">
                 <div class="form-group">
            <label class="form-control-label">Email:</label>
            <input type="email" name="email" placeholder="Enter your email" class="form-control">
        </div><!-- form-group -->
               


                <div class="form-group">
                    <label class="form-control-label">Password:</label>
                    <input type="password" name="password" placeholder="Enter your password" class="form-control">



                </div><!-- form-group -->
                <div class="form-group">
                    <a href="">Forgot password?</a>
                </div><!-- form-group -->
                <button class="btn btn-success btn-block">Sign In</button>
                <div class="tx-center bg-white bd pd-10 mg-t-40">Not yet a member? <a href="">Create an account</a></div>


            </div><!-- signbox-body -->
        </div><!-- signbox -->
    </div><!-- signpanel-wrapper -->

    <script src="~Content/lib/jquery/jquery.js"></script>
    <script src="~Content/lib/popper.js/popper.js"></script>
    <script src="~Content/lib/bootstrap/bootstrap.js"></script>
    <script src="~Content/js/shamcey.js"></script>
</body>

